<?xml version="1.0" encoding="UTF-8" ?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" 
  xmlns:app="http://schemas.android.com/apk/res-auto">
  
  <style name="settingsViewScrollBars">
    <item name="android:scrollbars">vertical|horizontal</item>
  </style>
  
  <style name="settingsViewTheme">
    <item name="settingsViewStyle">@style/settingsViewScrollBars</item>
  </style>
  
  <style name="datePickerDialogSpinnerTheme">
    <item name="android:datePickerStyle">@style/datePickerSpinnerStyle</item>
    <item name="android:windowIsFloating">true</item>
  </style>

   <style name="datePickerSpinnerStyle" parent="android:Widget.Material.DatePicker" >
        <item name="android:datePickerMode">spinner</item>
        <item name="android:calendarViewShown">false</item>
    </style>

</resources>